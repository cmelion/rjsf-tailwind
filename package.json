{
  "name": "shadcn-vite-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:bdd": "npx bddgen && npx playwright test",
    "test:bdd:generate": "npx bddgen",
    "test:bdd:run": "npx playwright test",
    "test:bdd:ui": "npx bddgen && concurrently \"yarn test:bdd:watch\" \"npx playwright test --ui\"",
    "test:bdd:watch": "chokidar \"**/*.steps.js\" \"**/*.feature\" -c \"yarn test:bdd:generate\""
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-icons/all-files": "^4.1.0",
    "@rjsf/core": "^5.24.8",
    "@rjsf/utils": "^5.24.8",
    "@rjsf/validator-ajv8": "^5.24.8",
    "@tanstack/react-table": "^8.21.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "generate-schema": "^2.6.0",
    "json-schema": "^0.4.0",
    "lucide-react": "^0.279.0",
    "monaco-editor": "^0.44.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.4.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@cucumber/cucumber": "^11.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@playwright/test": "^1.51.1",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "autoprefixer": "^10.4.16",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "msw": "^2.7.3",
    "playwright": "^1.51.1",
    "playwright-bdd": "^8.2.1",
    "postcss": "^8.4.31",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.3.3",
