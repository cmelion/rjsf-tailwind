{
  "name": "shadcn-vite-template",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build": "tsc && vite build",
    "build-storybook": "storybook build",
    "dev": "vite",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "merge-coverage": "mkdir -p coverage/tmp && npx nyc merge coverage/tmp .nyc_output/out.json && npx nyc report --reporter=html --report-dir=coverage/merged-html",
    "postinstall": "node remove-vitest-chai-file.cjs && node generate-parameter-types.cjs",
    "prestorybook:bg": "npx wait-on -t 5000 tcp:6006 && echo 'Storybook already running' || echo 'Starting Storybook...'",
    "preview": "vite preview",
    "start-storybook-and-test": "start-server-and-test 'yarn storybook:cov' 'http-get://localhost:6006/iframe.html?id=components-tailwindtable--default' 'npx playwright test --reporter=html'",
    "storybook": "storybook dev -p 6006",
    "storybook:bg": "wait-on -l tcp:6006 && echo 'Storybook is ready' || yarn storybook --ci --quiet --no-open",
    "storybook:cov": "storybook dev -p 6006 --ci --quiet --no-open",
    "test:bdd": "npx bddgen && concurrently --kill-others --success first \"yarn storybook:bg\" \"yarn test:bdd:run\"",
    "test:bdd:components": "vitest run --project components -t @component",
    "test:bdd:components:scenario": "vitest run --project components --testNamePattern",
    "test:bdd:coverage": "npx bddgen && yarn start-storybook-and-test",
    "test:bdd:generate": "npx bddgen",
    "test:bdd:run": "npx playwright test",
    "test:bdd:ui": "npx playwright test --ui",
    "test:bdd:watch": "chokidar \"src/**/*.steps.ts\" \"src/**/*.feature\" -c \"yarn test:bdd:generate\"",
    "test:components:coverage": "vitest run --project components --coverage",
    "test:coverage": "yarn test:bdd:coverage && yarn test:components:coverage"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-slot": "^1.0.2",
    "@react-icons/all-files": "^4.1.0",
    "@rjsf/core": "^5.24.8",
    "@rjsf/utils": "^5.24.8",
    "@rjsf/validator-ajv8": "^5.24.8",
    "@tanstack/react-table": "^8.21.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "generate-schema": "^2.6.0",
    "json-schema": "^0.4.0",
    "lucide-react": "^0.279.0",
    "monaco-editor": "^0.44.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^4.4.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@cucumber/cucumber": "^11.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@playwright/test": "^1.51.1",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/experimental-addon-test": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/browser": "^3.1.1",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "3.1.1",
    "aria-query": "^5.3.2",
    "autoprefixer": "^10.4.16",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-storybook": "^0.12.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "istanbul-merge": "^2.0.0",
    "jsdom": "^26.1.0",
    "msw": "^2.7.3",
    "nyc": "^17.1.0",
    "playwright": "^1.51.1",
    "playwright-bdd": "^8.2.1",
    "postcss": "^8.4.31",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "quickpickle": "^1.6.2",
    "start-server-and-test": "^2.0.11",
    "storybook": "^8.6.12",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^6.2.5",
    "vitest": "^3.1.1",
    "wait-on": "^8.0.3"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "resolutions": {
    "read-pkg": "^9.0.0",
    "unicorn-magic": "0.3.0"
  }
}
